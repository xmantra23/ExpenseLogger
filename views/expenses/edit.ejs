<%- include("../partials/header") %>
<%- include("../partials/navbar") %>
<div class = "container expense">
	<h2>Edit: <%= expense.title%></h2>
	<form action = "/expenses/<%= expense._id %>?_method=PUT" method = "POST" enctype = "multipart/form-data">
		<div class = "form-group row">
			<label for = "title" class = "col-sm-4 col-form-label">Expense Title :</label>
			<div class = "col-sm-8">
				<input class = "form-control"  id = "title" type = "text" name = "title" 
				   value = "<%= expense.title %>" maxlength="36" required>	
			</div>
		</div>
		<div class = "form-group row">
			<label for = "total" class = "col-sm-4 col-form-label">Total Amount ($) :</label>
			<div class = "col-sm-8">
				<input class = "form-control"  id = "total" type = "number" name = "total" 
					   value = "<%= expense.total %>" min = "0.01" max = "99999999.99" step = "0.01" required>
			</div>
		</div>
		
		<div class = "form-group row">
			<label for = "location" class = "col-sm-4 col-form-label">Purchase Location :</label>
			<div class = "col-sm-8">
				<input class = "form-control"  id = "location" type = "text" name = "location" 
				   value = "<%= expense.location %>" maxlength = "45" required>	
			</div>
		</div>
		<div class = "form-group row">
			<label for="transactionDate" class = "col-sm-4 col-form-label">Transaction Date :</label>
			<div class = "col-sm-8">
				<input class = "form-control"  id = "transactionDate" type = "Date" name = "transactionDate"
					value = "<%= format(expense.transactionDate) %>" max = <%= today %> required>	
			</div>
		</div>
		<div class = "form-group row">
			<label for="memo" class = "col-sm-4 col-form-label">Memo :</label>
			<div class = "col-sm-8">
				<input class = "form-control" id = "memo" type = "text" name = "memo" 
					   value = "<%= expense.memo %>" maxlength = "45" required>
			</div>
		</div>
		<div class = "form-group row">
			<label for="receipt" class = "col-sm-4 col-form-label">Upload Receipt :</label>
			<div class = "col-sm-8">
				<input name = "receipt" id = "receipt" type = "file" accept="application/pdf">
			</div>
		</div>
		
		<button type = "submit" id = "register-submit" class = "btn btn-lg btn-outline-light btn-block">SUBMIT</button>
		<a class = "link" href = "/expenses">Go Back</a>
	</form>
</div>

<%- include("../partials/footer") %>