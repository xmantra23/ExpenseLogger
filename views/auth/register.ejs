<%- include("../partials/header") %>
<div class = "container register">
	<h2>REGISTER</h2>
	<form action = "/register" method = "POST">
		<div class = "form-group">
			<input class = "form-control"  id = "email" type = "text" name = "email" 
				   placeholder="abc@xxx.com" required>
		</div>
		<div class = "form-group">
			<input class = "form-control"  id = "username" type = "text" name = "username" 
				   placeholder="username" required>
		</div>
		
		<div class = "form-group">
			<input class = "form-control"  id = "first-name" type = "text" name = "firstName" 
				   placeholder="First Name" required>
		</div>
		<div class = "form-group">
			<input class = "form-control"  id = "last-name" type = "text" name = "lastName" 
				   placeholder="Last Name" required>
		</div>
		<div class = "form-group">
			<input class = "form-control" id = "password" type = "password" name = "password" 
				   placeholder="Password" required>
		</div>
		<div class = "form-group">
			<input class = "form-control" id = "rePassword" type = "password" name = "rePassword" 
				   placeholder="Confirm Password" required>
		</div>
		
		<button type = "submit" id = "register-submit" class = "btn btn-lg btn-outline-light btn-block">SUBMIT</button>
		<a class = "link" href = "/">Go Back</a>
		<a class = "link" style = "float:right" href = "#">Register as Admin</a>
	</form>
</div>

<%- include("../partials/footer") %>